<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard</title>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
</head>

<body>

  {{! header }}
  {{> headerWithData this }}

  <div class="container">

    {{! Show Display Image }}
    {{#if user.displayImage}}
    <img height="125" width="125" class="border rounded-circle" src="{{user.displayImage}}" alt="Display Image" />
    {{else}}
    {{#if user.displayName}}
    <img src="https://api.dicebear.com/5.x/thumbs/svg?seed={{user.displayName}}" alt="{{user.displayName}}"
      class="img-fluid img-thumbnail rounded-circle mx-auto d-block" style="width: 125; height: 125;" />
    {{else}}
    <img src="https://api.dicebear.com/5.x/thumbs/svg?seed={{user.username}}" alt="{{user.username}}"
      class="img-fluid img-thumbnail rounded-circle mx-auto d-block" style="width: 125; height: 125;" />
    {{/if}}

    {{/if}}

    <br />

    <div>
      Username:
      {{user.username}}
    </div>
    <div>
      Display Name:
      {{user.displayName}}
    </div>
    <div>
      Display Cover:
      {{user.displayCover}}
    </div>
    <div>
      Email:
      {{user.email}}
    </div>
    <div>
      Account Created:
      {{user.created_at}}
    </div>
    <div>
      Last Updated:
      {{user.updated_at}}
    </div>
    <div>
      {{#if user.is_verified}}
      Email Verified: Yes
      {{else}}
      Email Verified: No
      {{/if}}
    </div>

    <span>
      {{user.link_counter}}
      Links Created
    </span>

  </div>

</body>

<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

<script>
  {
    {
      !$('#exampleModal').on('shown.bs.modal', function () {
        $('#myInput').trigger('focus')
      })
    }
  }
</script>

<script>
  new ClipboardJS('.btn');
</script>

</html>